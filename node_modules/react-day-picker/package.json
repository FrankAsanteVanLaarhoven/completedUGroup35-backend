{
  "name": "react-day-picker",
  "version": "8.0.0-beta.29",
  "description": "Customizable Date Picker for React",
  "author": "Giampaolo Bellavite <io@gpbl.dev>",
  "homepage": "http://react-day-picker.js.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gpbl/react-day-picker"
  },
  "bugs": {
    "url": "https://github.com/gpbl/react-day-picker/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "develop": "concurrently --names='tsc-alias,tsc' 'yarn tsc-alias -w' 'yarn tsc -w --pretty'",
    "lint": "eslint --ext .ts,.tsx src",
    "build:clean": "rimraf esm && rimraf \"dist/**/{*.,!(package.json)}\"",
    "build:dist": "tsc --project tsconfig.dist.json && tsc-alias -p tsconfig.dist.json",
    "build:esm": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build": "yarn build:clean && yarn build:esm && yarn build:dist",
    "css:types": "yarn tcm -p style.css",
    "test": "yarn jest",
    "test:watch": "yarn test --watchAll",
    "coverage": "yarn test --coverage"
  },
  "files": [
    "dist",
    "esm",
    "style.css",
    "style.css.d.ts"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.0",
    "date-fns": "^2.19.0",
    "debug": "^4.3.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-date": "^1.1.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "timekeeper": "^2.2.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.2.8",
    "tslib": "^2.1.0",
    "typed-css-modules": "^0.6.5",
    "typescript": "~4.1.5"
  },
  "peerDependencies": {
    "date-fns": "^2.10.0",
    "react": "^16.8.0 || ^17.0.0"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/gpbl"
  }
}
